<div class="container">

  <div class="row justify-content-center">
    <div class="form-group mt-3">
      <select class="form-control" id="exampleSelect1">
        {{#each categories}}
        <option>{{this.name}}</option>
        {{/each}}
       </select>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <span>總金額：</span>
    <p class="text-warning pl-3" style="font-size: 48px;">{{totalAmount}}</p>
  </div>

  <div class="row d-flex justify-content-center">
    <ul class="list-group col-8">
      {{#each recordList}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-1">{{{ this.categoryIcon }}}</div>
        <div class="d-flex flex-column col-5">
          <div>{{this.name}}</div>
          <div>{{this.date}}</div>
        </div>
        <div class="col-2">{{this.amount}}</div>
        <div class="col-4 ml-auto">
          <a class="btn btn-primary" href="">修改</a>
          <a class="btn btn-danger" href="">刪除</a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="row d-flex justify-content-center my-4">
    <a class="btn btn-warning" href="/records/new">新增支出</a>
  </div>

</div>