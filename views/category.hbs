<div class="container">

  <div class="row justify-content-center">
    <div class="form-group mt-3">
      <form action="/category" method="POST">
        <select class="form-control" onchange="this.form.submit()" name="category">
          {{#each categories}}
            <option {{#compare this.name ../categorySelected}}selected{{/compare}}>{{this.name}}</option>
          {{/each}}
         </select>
      </form>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <span>總金額：</span>
    <p class="text-warning pl-3" style="font-size: 48px;">{{totalAmount}}</p>
  </div>

  <div class="row d-flex justify-content-center">
    <ul class="list-group col-8">
      {{#each recordList}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-1">{{{ this.categoryIcon }}}</div>
        <div class="d-flex flex-column col-5">
          <div>{{this.name}}</div>
          <div>{{this.date}}</div>
        </div>
        <div class="col-2">{{this.amount}}</div>
        <div class="col-4 ml-auto">
          <a class="btn btn-secondary" href="./records/{{ this._id }}/edit">修改</a>
          <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="row d-flex justify-content-center my-4">
    <a class="btn btn-warning" href="/records/new">新增支出</a>
  </div>

</div>